    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Watch"
    android:background="#E2DFD9">
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:layout_marginLeftPercent="3%"
        app:layout_marginRightPercent="3%"
        app:layout_marginBottomPercent="2%">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:id="@+id/spacer1"></RelativeLayout>
            <com.dane.dni.PolarView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:id="@+id/watch1"
                android:layout_gravity="center_horizontal"
                android:layout_weight="11"
                custom:centerCircleRadius="17dp"
                custom:ringGap="7dp"
                custom:ringWidth="24.7dp"
                custom:chromeBarRadius="138dp"
                custom:chromeBarWidth="1dp"
                custom:counterSize="12dp"
                custom:counterColor="#ffffff"
                custom:chromeCircleRadius="1.5dp"
                custom:chromeOuterRingPadding="3dp"
                custom:chromeBackgroundPadding="3dp"
                custom:chromeSmallCircleColor="#918C88"
                custom:chromeLargeCircleColor="#B2AEA6"
                custom:chromeRingColor="#C4C2BC"
                custom:chromeGapColor="#D6D3D0"
                custom:chromeBackgroundColor1="#F4F2EF"
                custom:chromeBackgroundColor2="#B2B1AD"
                custom:units="PAHRTAHVO,GAHRTAHVO,YAHR,VAILEE"
