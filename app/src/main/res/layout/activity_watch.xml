<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <FrameLayout
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Watch"
    android:background="#e5e2e1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent">

        <com.dane.dni.PolarView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@+id/watch1"
            android:layout_gravity="center_horizontal"
            android:layout_weight="11"
            custom:centerCircleRadius="17dp"
            custom:ringGap="6dp"
            custom:ringWidth="19dp"
            custom:chromeBarRadius="114dp"
            custom:chromeBarWidth="1dp"
            custom:counterSize="9dp"
            custom:chromeCircleRadius="1.5dp"
            custom:chromeOuterRingPadding="3dp"
            custom:chromeBackgroundPadding="3dp"
            custom:units="PAHRTAHVO,GAHRTAHVOTEE,YAHR,VAILEE" />

        <com.dane.dni.PolarView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@+id/watch2"
            android:layout_gravity="center_horizontal"
            android:layout_weight="7"
            custom:centerCircleRadius="10dp"
            custom:ringGap="5dp"
            custom:ringWidth="16dp"
            custom:chromeBarRadius="70dp"
            custom:chromeBarWidth="1dp"
            custom:counterSize="8dp"
            custom:chromeCircleRadius="1.5dp"
            custom:chromeOuterRingPadding="3dp"
            custom:chromeBackgroundPadding="3dp"
            custom:units="PRORAHN,GORAHN,TAHVO" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#ffffff">
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:background="#f4f4f4"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:gravity="bottom">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="0dp"
                    android:orientation="vertical"
                    android:layout_weight="4"
                    android:layout_gravity="center_vertical"
                    android:baselineAligned="false"
                    android:textAlignment="gravity"
                    android:gravity="center_vertical"
                    android:animationCache="false">

                    <com.dane.dni.TimeDisplay
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/month_display"
                        android:textColor="#3f3329"
                        android:textSize="25dp"
                        android:gravity="bottom"
                        android:textAlignment="gravity"
                        android:includeFontPadding="false"
                        android:textIsSelectable="false"
                        android:shadowDx="0"
                        android:shadowDy="3"
                        android:shadowRadius="1"
                        android:shadowColor="#b9b8b5" />

                    <com.dane.dni.TimeDisplay
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/time_display"
                        android:textColor="#3f3329"
                        android:textSize="25dp"
                        android:gravity="top"
                        android:textAlignment="gravity"
                        android:includeFontPadding="false"
                        android:layout_marginTop="-5dp"
                        android:shadowDx="0"
                        android:shadowDy="3"
                        android:shadowRadius="1"
                        android:shadowColor="#b9b8b5" />
                </LinearLayout>

                <com.dane.dni.TimeDisplay
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/year_display"
                    android:textColor="#3f3329"
                    android:layout_weight="3"
                    android:layout_gravity="center_vertical|right"
                    android:textSize="50dp"
                    android:textIsSelectable="false"
                    android:textAlignment="gravity"
                    android:gravity="right"
                    android:layout_marginTop="-7dp"
                    android:shadowDx="0"
                    android:shadowDy="3"
                    android:shadowRadius="1"
                    android:shadowColor="#b9b8b5" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#c8cfcd"></LinearLayout>
        </LinearLayout>

    </LinearLayout>
    </FrameLayout>


    <ListView android:id="@+id/left_drawer"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#111"/>

</android.support.v4.widget.DrawerLayout>
