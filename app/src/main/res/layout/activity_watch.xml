<RelativeLayout
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Watch"
    android:background="#e5e2e1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent">

        <com.dane.dni.PolarView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@+id/watch1"
            android:layout_gravity="center_horizontal"
            android:layout_weight="11"
            custom:centerCircleRadius="17dp"
            custom:ringGap="6dp"
            custom:ringWidth="19dp"
            custom:chromeBarRadius="115dp"
            custom:chromeBarWidth="2dp"
            custom:counterSize="9dp"
            custom:chromeCircleRadius="3dp"
            custom:units="PAHRTAHVO,GAHRTAHVOTEE,YAHR,VAILEE" />

        <com.dane.dni.PolarView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@+id/watch2"
            android:layout_gravity="center_horizontal"
            android:layout_weight="7"
            custom:centerCircleRadius="10dp"
            custom:ringGap="5dp"
            custom:ringWidth="16dp"
            custom:chromeBarRadius="70dp"
            custom:chromeBarWidth="2dp"
            custom:counterSize="8dp"
            custom:chromeCircleRadius="3dp"
            custom:units="PRORAHN,GORAHN,TAHVO" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="0dp"
                android:orientation="vertical"
                android:layout_weight="4"
                android:layout_gravity="center_vertical"
                android:baselineAligned="false"
                android:textAlignment="gravity"
                android:gravity="center_vertical"
                android:animationCache="false">

                <com.dane.dni.TimeDisplay
                    android:layout_width="wrap_content"
                    android:layout_height="0sp"
                    android:id="@+id/month_display"
                    android:textColor="#3f3329"
                    android:textSize="32sp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:textAlignment="gravity"
                    android:includeFontPadding="false" />

                <com.dane.dni.TimeDisplay
                    android:layout_width="wrap_content"
                    android:layout_height="0sp"
                    android:id="@+id/time_display"
                    android:textColor="#3f3329"
                    android:textSize="32sp"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:textAlignment="gravity"
                    android:includeFontPadding="false" />
            </LinearLayout>

            <com.dane.dni.TimeDisplay
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/year_display"
                android:textColor="#3f3329"
                android:layout_weight="3"
                android:layout_gravity="center_vertical|right"
                android:textSize="60sp"
                android:textIsSelectable="false"
                android:textAlignment="gravity"
                android:gravity="right" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
