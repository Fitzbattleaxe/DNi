            <com.dane.dni.PolarView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:id="@+id/watch2"
                android:layout_gravity="center_horizontal"
                android:layout_weight="7"
                custom:centerCircleRadius="10dp"
                custom:ringGap="5.6dp"
                custom:ringWidth="16.8dp"
                custom:chromeBarRadius="73dp"
                custom:chromeBarWidth="1dp"
                custom:counterSize="8dp"
                custom:counterColor="#ffffff"
                custom:chromeCircleRadius="1.5dp"
                custom:chromeOuterRingPadding="3dp"
                custom:chromeBackgroundPadding="3dp"
                custom:chromeSmallCircleColor="#918C88"
                custom:chromeLargeCircleColor="#B2AEA6"
                custom:chromeRingColor="#C4C2BC"
                custom:chromeGapColor="#D6D3D0"
                custom:chromeBackgroundColor1="#F4F2EF"
                custom:chromeBackgroundColor2="#B2B1AD"
                custom:units="PRORAHN,GORAHN,TAHVO"
                custom:colors="t(#0b104f:0.0;#12285e:0.0433;#103159:0.0867;#1b3f66:0.13;#25527a:0.1733;#2b5d82:0.2167;#34718c:0.26;#39849e:0.3033;#4899af:0.3467;#56a3ba:0.39;#65aec4:0.4333;#7bbccc:0.4768;#85c3d6:0.52;#7bbccc:0.56;#65aec4:0.6;#56a3ba:0.64;#4899af:0.68;#39849e:0.72;#34718c:0.76;#2b5d82:0.8;#25527a:0.84;#1b3f66:0.88;#103159:0.92;#12285e:0.96;#0b104f:1.0),t(#0b104f:0.0;#12285e:0.0433;#103159:0.0867;#1b3f66:0.13;#25527a:0.1733;#2b5d82:0.2167;#34718c:0.26;#39849e:0.3033;#4899af:0.3467;#56a3ba:0.39;#65aec4:0.4333;#7bbccc:0.4768;#85c3d6:0.52;#7bbccc:0.56;#65aec4:0.6;#56a3ba:0.64;#4899af:0.68;#39849e:0.72;#34718c:0.76;#2b5d82:0.8;#25527a:0.84;#1b3f66:0.88;#103159:0.92;#12285e:0.96;#0b104f:1.0),t(#0b104f:0.0;#12285e:0.0833;#103159:0.1667;#1b3f66:0.25;#25527a:0.3333;#2b5d82:0.4167;#34718c:0.5;#39849e:0.5833;#4899af:0.6667;#56a3ba:0.75;#65aec4:0.8333;#7bbccc:0.9167;#85c3d6:1.0)"/>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="0"
                android:id="@+id/spacer2"></RelativeLayout>

            <android.support.percent.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3.1">
                <RelativeLayout
                    android:id="@+id/clockTopChrome"
                    android:layout_width="match_parent"
                    app:layout_heightPercent="6%"
                    android:background="#ffffff">
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/clockDisplayArea"
                    android:layout_below="@id/clockTopChrome"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    app:layout_heightPercent="92%"
                    android:layout_gravity="bottom|center_horizontal"
                    android:background="#f4f2ef"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="0dp"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical"
                        android:baselineAligned="false"
                        android:textAlignment="gravity"
                        android:gravity="center_vertical"
                        android:animationCache="false"
                        android:layout_alignParentLeft="true">

                        <com.dane.dni.TimeDisplay
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/month_display"
                            android:textColor="#3f3329"
                            android:textSize="27dp"
                            android:gravity="bottom"
                            android:textAlignment="gravity"
                            android:includeFontPadding="false"
                            android:textIsSelectable="false"
                            android:layout_marginLeft="14dp"
                            android:shadowDx="0"
                            android:shadowDy="2"
                            android:shadowRadius="2"
                            android:shadowColor="#b9b8b5"
                            android:layout_marginTop="-1dp" />

                        <com.dane.dni.TimeDisplay
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/time_display"
                            android:textColor="#3f3329"
                            android:textSize="27dp"
                            android:gravity="top"
                            android:textAlignment="gravity"
                            android:includeFontPadding="false"
                            android:layout_marginTop="-6dp"
                            android:layout_marginLeft="14dp"
                            android:shadowDx="0"
                            android:shadowDy="2"
                            android:shadowRadius="2"
                            android:shadowColor="#b9b8b5" />
                    </LinearLayout>

                    <com.dane.dni.TimeDisplay
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/year_display"
                        android:textColor="#3f3329"
                        android:layout_gravity="center_vertical|right"
                        android:textSize="54dp"
                        android:textIsSelectable="false"
                        android:textAlignment="gravity"
                        android:gravity="right"
                        android:layout_marginTop="-17dp"
                        android:layout_marginRight="14dp"
                        android:shadowDx="0"
                        android:shadowDy="2"
                        android:shadowRadius="2"
                        android:shadowColor="#b9b8b5"
                        android:layout_alignParentRight="true" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_below="@id/clockDisplayArea"
                    android:layout_width="match_parent"
                    app:layout_heightPercent="2%"
                    android:background="#c8cfcd">
                </RelativeLayout>
            </android.support.percent.PercentRelativeLayout>
        </LinearLayout>
    </FrameLayout>
    <com.dane.dni.MenuButton
        app:layout_marginLeftPercent="5%"
        app:layout_marginTopPercent="3%"
        app:layout_heightPercent="8%"
        app:layout_widthPercent="14%"
        android:id="@+id/menuButton"
        android:background="@android:color/transparent"
        android:adjustViewBounds="false"
        android:onClick="openSettings"
        android:clickable="true" />
</android.support.percent.PercentFrameLayout>
