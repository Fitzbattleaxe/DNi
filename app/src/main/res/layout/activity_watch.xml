<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <android.support.percent.PercentFrameLayout
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".Watch"
    android:background="#e5e2e1">
        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            app:layout_marginLeftPercent="3%"
            app:layout_marginRightPercent="3%"
            app:layout_marginBottomPercent="2%">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:id="@+id/spacer1"></RelativeLayout>
        <com.dane.dni.PolarView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@+id/watch1"
            android:layout_gravity="center_horizontal"
            android:layout_weight="11"
            custom:centerCircleRadius="17dp"
            custom:ringGap="7dp"
            custom:ringWidth="24.7dp"
            custom:chromeBarRadius="114dp"
            custom:chromeBarWidth="1dp"
            custom:counterSize="9dp"
            custom:chromeCircleRadius="1.5dp"
            custom:chromeOuterRingPadding="3dp"
            custom:chromeBackgroundPadding="3dp"
            custom:units="PAHRTAHVO,GAHRTAHVOTEE,YAHR,VAILEE" />

        <com.dane.dni.PolarView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@+id/watch2"
            android:layout_gravity="center_horizontal"
            android:layout_weight="7"
            custom:centerCircleRadius="10dp"
            custom:ringGap="5.6dp"
            custom:ringWidth="16.8dp"
            custom:chromeBarRadius="70dp"
            custom:chromeBarWidth="1dp"
            custom:counterSize="8dp"
            custom:chromeCircleRadius="1.5dp"
            custom:chromeOuterRingPadding="3dp"
            custom:chromeBackgroundPadding="3dp"
            custom:units="PRORAHN,GORAHN,TAHVO" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0"
            android:id="@+id/spacer2"></RelativeLayout>

        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.2">
            <RelativeLayout
                android:id="@+id/clockTopChrome"
                android:layout_width="match_parent"
                app:layout_heightPercent="6%"
                android:background="#ffffff">
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/clockDisplayArea"
                android:layout_below="@id/clockTopChrome"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                app:layout_heightPercent="92%"
                android:layout_gravity="bottom|center_horizontal"
                android:background="#f4f4f4"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:gravity="bottom">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="0dp"
                    android:orientation="vertical"
                    android:layout_weight="4"
                    android:layout_gravity="center_vertical"
                    android:baselineAligned="false"
                    android:textAlignment="gravity"
                    android:gravity="center_vertical"
                    android:animationCache="false">

                    <com.dane.dni.TimeDisplay
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/month_display"
                        android:textColor="#3f3329"
                        android:textSize="25dp"
                        android:gravity="bottom"
                        android:textAlignment="gravity"
                        android:includeFontPadding="false"
                        android:textIsSelectable="false"
                        android:layout_marginLeft="10dp"
                        android:shadowDx="0"
                        android:shadowDy="2"
                        android:shadowRadius="2"
                        android:shadowColor="#b9b8b5" />

                    <com.dane.dni.TimeDisplay
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/time_display"
                        android:textColor="#3f3329"
                        android:textSize="25dp"
                        android:gravity="top"
                        android:textAlignment="gravity"
                        android:includeFontPadding="false"
                        android:layout_marginTop="-5dp"
                        android:layout_marginLeft="10dp"
                        android:shadowDx="0"
                        android:shadowDy="2"
                        android:shadowRadius="2"
                        android:shadowColor="#b9b8b5" />
                </LinearLayout>

                <com.dane.dni.TimeDisplay
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/year_display"
                    android:textColor="#3f3329"
                    android:layout_weight="3"
                    android:layout_gravity="center_vertical|right"
                    android:textSize="50dp"
                    android:textIsSelectable="false"
                    android:textAlignment="gravity"
                    android:gravity="right"
                    android:layout_marginTop="-7dp"
                    android:layout_marginRight="10dp"
                    android:shadowDx="0"
                    android:shadowDy="2"
                    android:shadowRadius="2"
                    android:shadowColor="#b9b8b5" />
            </LinearLayout>
            <RelativeLayout
                android:layout_below="@id/clockDisplayArea"
                android:layout_width="match_parent"
                app:layout_heightPercent="2%"
                android:background="#c8cfcd">
            </RelativeLayout>
        </android.support.percent.PercentRelativeLayout>
    </LinearLayout>
        </FrameLayout>
    </android.support.percent.PercentFrameLayout>



